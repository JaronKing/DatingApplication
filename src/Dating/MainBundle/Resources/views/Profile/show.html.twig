{% extends 'base.html.twig' %}
{% block body %}
    <div class="row mt">
        <div class="col-lg-12">
            <div class="form-panel">
                <h4 class="mb"><i class="fa fa-angle-right"></i> Welcome to the Profile:Show</h4>
                <div style="float:right;">
                    <a href="{{ path('main_profile_edit') }}" class="btn btn-primary">Edit</a>
                </div>
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Name</th>
                            <td>{{ profile.createdBy.username }}</td>
                        </tr>
                        <tr>
                            <th>Age</th>
                            <td>{{ profile.age }}</td>
                        </tr>
                        <tr>
                            <th>Summary</th>
                            <td>{{ profile.summary }}</td>
                        </tr>
                    </tbody>
                </table>
            </div><!-- /form-panel -->
        </div><!-- /col-lg-12 -->
    </div>
{% endblock %}
