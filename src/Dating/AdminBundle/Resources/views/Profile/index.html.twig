{% extends 'adminBase.html.twig' %}
{% block body %}

    <div class="row mt">
        <div class="col-lg-12">
            <div class="form-panel">
                <h4 class="mb"><i class="fa fa-angle-right"></i> Profile</h4>
                <table class="table">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Birthday</th>
                        <th>Age</th>
                        <th>Height</th>
                        <th>Summary</th>
                        <th>Pictures</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for entity in entities %}
                        <tr>
                            <td><a href="{{ path('profile_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                            <td>{% if entity.birthday %}{{ entity.birthday|date('Y-m-d H:i:s') }}{% endif %}</td>
                            <td>{{ entity.age }}</td>
                            <td>{{ entity.height }}</td>
                            <td>{{ entity.summary }}</td>
                            <td>{{ entity.pictures }}</td>
                            <td>
                                <ul>
                                    <li>
                                        <a href="{{ path('profile_show', { 'id': entity.id }) }}">show</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('profile_edit', { 'id': entity.id }) }}">edit</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <ul>
                    <li>
                        <a href="{{ path('profile_new') }}">
                            Create a new entry
                        </a>
                    </li>
                </ul>
            </div><!-- /form-panel -->
        </div><!-- /col-lg-12 -->
    </div>
    {% endblock %}
