{% extends 'adminBase.html.twig' %}
{% block body %}


<div class="row mt">
    <div class="col-lg-12">
        <div class="form-panel">
            <h4 class="mb"><i class="fa fa-angle-right"></i> Profile</h4>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Body</th>
                <th>Questions</th>
                <th>Createdby</th>
                <th>Datecreated</th>
                <th>Outcomes</th>
                <th>Scores</th>
                <th>Submittedby</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('survey_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.body }}</td>
                <td>{{ entity.questions }}</td>
                <td>{{ entity.createdBy }}</td>
                <td>{% if entity.dateCreated %}{{ entity.dateCreated|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.outcomes }}</td>
                <td>{{ entity.scores }}</td>
                <td>{{ entity.submittedBy }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('survey_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('survey_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('survey_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>

        </div>
    </div>
</div>
    {% endblock %}
